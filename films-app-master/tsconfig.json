{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceRoot": "src",
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.json", "src/**/*.ts", "src/**/*.tsx"]
}